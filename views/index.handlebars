<img src="/assets/img/new-burger.jpg">
<header>Eat all the burgers you want!</header>

<br>

<form class="create">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

<br>

  <button type="submit">Add Burger</button>
</form>

<div class="card" id="burger-ate">
  {{#each burgers}}
    {{#if devoured}}
      {{> burger/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</div>

<div class="card" id="burger-add">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</div>